{
  "openapi": "3.0.0",
  "info": {
    "title": "Xpense.API",
    "description": "Financial Tracker and advisor",
    "version": "1.0"
  },
  "servers": [
    {
      "description": "Development Environment",
      "url": "http://localhost:4000/api"
    },
    {
      "description": "Staging Environment",
      "url": "http://localhost:4001/api"
    },
    {
      "description": "Production Environment",
      "url": "https://www.xpense.io/api"
    }
  ],
  "tags": [
    {
      "description": "Accounts management",
      "name": "Accounts"
    },
    {
      "description": "Transactions management",
      "name": "Transactions"
    }
  ],
  "components": {
    "responses": {
      "InternalServerError": {
        "description": "Internal Server Error",
        "content": {
          "application/json": {
            "example": {
              "message": "An Internal Server Error Occured"
            }
          }
        }
      }
    },
    "schemas": {
      "AccountInformation": {
        "$ref": "schemas/accounts/account-info.json",
        "tags":["Accounts"]
      },
      "InvalidAccountInformation": {
        "$ref": "schemas/accounts/validation/invalid-account-info.json"
      }
    }
  },
  "paths": {
    "/accounts/{accountId}": {
      "get": {
        "summary": "Get Account Information",
        "tags": ["Accounts"],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AccountInformation"
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      },
      "put": {
        "summary": "Update an Account Information",
        "tags": ["Accounts"],
        "requestBody": {
          "description": "Account Information",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AccountInformation"
              }
            }
          }
        },
        "responses": {
          "204": {
            "description": "No Content"
          },
          "400": {
            "description": "Bad Request: Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/InvalidAccountInformation"
                }
              }
            }
          },
          "500": {
            "$ref": "#/components/responses/InternalServerError"
          }
        }
      },
      "delete":{
        "summary": "Deletes an account",
        "responses": {
          ""
        }
      }
    }
  }
}
